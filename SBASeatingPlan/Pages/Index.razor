@page "/"
@using SBASeatingPlan.Auth0

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <div class="demo-wrap">
                <div class="demo-content">
                    <div class="mat-layout-grid">
                        <div class="mat-layout-grid-inner">
                            <MatBody1 class="mat-layout-grid-cell mat-layout-grid-cell-span-1-phone mat-layout-grid-cell-align-middle">DeadLine</MatBody1>
                            <MatDatePicker Style="margin:0" @bind-Value="DeadLine" ReadOnly="true" class="mat-layout-grid-cell mat-layout-grid-cell-span-3-phone" />
                            <MatButton Raised="true" Label="Apply" class="mat-layout-grid-cell mat-layout-grid-cell-span-2-phone"></MatButton>
                            <MatButton Raised="true" Label="Info" class="mat-layout-grid-cell mat-layout-grid-cell-span-2-phone"></MatButton>
                            <MatButton Raised="true" Label="More Details" class="mat-layout-grid-cell mat-layout-grid-cell-span-4-phone"></MatButton>
                            <MatButton Raised="true" Label="Contact Us..." class="mat-layout-grid-cell mat-layout-grid-cell-span-4-phone"></MatButton>
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <Login></Login>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    DateTime? DeadLine = new DateTime(2023, 7, 1, 23, 59, 59).ToLocalTime();
}
