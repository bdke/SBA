@inject NavigationManager navManager

<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <img class="mat-layout-grid-cell mat-layout-grid-cell-span-4-phone center" 
        src="images/school_logo.jpg" style="text-align:center"/>
        <MatButton Raised="true" OnClick="UserLogin" Label="Login" class="mat-layout-grid-cell mat-layout-grid-cell-span-4-phone"></MatButton>
        <MatButton Raised="true" OnClick="UserSignUp" Label="SignUp" class="mat-layout-grid-cell mat-layout-grid-cell-span-4-phone"></MatButton>
    </div>
</div>

@code {
    public async Task UserLogin()
    {
        navManager.NavigateTo("/login");
    }

    public async Task UserSignUp()
    {
        navManager.NavigateTo("/signup");
    }
}
